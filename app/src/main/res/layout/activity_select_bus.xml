<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_bus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ec.klecet.com.klecetbustrack.SelectBus">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3F51B5"
        android:gravity="center"
        android:text="Select BUS"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:text="B3"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/btn_b3"
        android:backgroundTint="@color/colorAccent"
        android:textSize="24sp"
        android:layout_below="@+id/btn_b2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="B1"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/btn_b1"
        android:backgroundTint="@color/colorAccent"
        android:textSize="24sp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/btn_b2"
        android:layout_alignStart="@+id/btn_b2" />

    <Button
        android:text="B4"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/btn_b4"
        android:backgroundTint="@color/colorAccent"
        android:textSize="24sp"
        android:layout_below="@+id/btn_b3"
        android:layout_alignLeft="@+id/btn_b3"
        android:layout_alignStart="@+id/btn_b3" />

    <Button
        android:text="B5"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/btn_b5"
        android:backgroundTint="@color/colorAccent"
        android:textSize="24sp"
        android:layout_below="@+id/btn_b4"
        android:layout_alignLeft="@+id/btn_b6"
        android:layout_alignStart="@+id/btn_b6" />

    <Button
        android:text="B6"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_b6"
        android:backgroundTint="@color/colorAccent"
        android:textSize="24sp"
        android:layout_below="@+id/btn_b5"
        android:layout_alignLeft="@+id/btn_b4"
        android:layout_alignStart="@+id/btn_b4" />

    <Button
        android:text="All Buses"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_allbuses"
        android:backgroundTint="@color/colorAccent"
        android:textSize="24sp"
        android:layout_below="@+id/btn_b6"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="B2"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_b2"
        android:backgroundTint="@color/colorAccent"
        android:textSize="24sp"
        android:layout_below="@+id/btn_b1"
        android:layout_alignLeft="@+id/btn_b3"
        android:layout_alignStart="@+id/btn_b3" />
</RelativeLayout>
